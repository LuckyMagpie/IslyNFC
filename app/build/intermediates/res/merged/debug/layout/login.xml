<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout">
    <EditText
        android:textColor="@color/letter_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:textSize="20sp"
        android:hint="@string/user"
        android:gravity="center"
        android:id="@+id/etUser"
        android:theme="@style/EditTextStyle"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_below="@+id/etUser"
        android:textColor="@color/letter_color"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:textSize="20sp"
        android:gravity="center"
        android:hint="@string/password"
        android:theme="@style/EditTextStyle"
        android:id="@+id/etPass"/>

        <Button
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:textSize="15sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="@style/myLogin"
            android:id="@+id/btnEnter"
            android:text="@string/take_in"
            android:textColor="#292B2B"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etPass"
            android:layout_marginTop="5sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvError"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>
</RelativeLayout><!-- From: file:/home/juan/Escritorio/Isly/app/src/main/res/layout/login.xml -->